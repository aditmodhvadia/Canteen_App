<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Improve UI of Buttons, set color palette-->

    <TextView
        android:id="@+id/tvCurrentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="16dp"
        android:text="@string/dummy_text"
        android:textSize="19sp" />

    <Button
        android:id="@+id/firstBreakButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_test"
        android:padding="10dp"
        android:shadowColor="@android:color/black"
        android:text="10:50 AM"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationZ="5dp" />

    <Button
        android:id="@+id/secondBreakButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_test"
        android:padding="10dp"
        android:shadowColor="@android:color/black"
        android:text="01:15 PM"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationZ="5dp" />

    <Button
        android:id="@+id/lastBreakButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/button_test"
        android:padding="10dp"
        android:shadowColor="@android:color/black"
        android:text="04:15 PM"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationZ="5dp" />

    <Button
        android:id="@+id/nowButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/button_test"
        android:padding="10dp"
        android:shadowColor="@android:color/black"
        android:text="@string/get_it_now"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationZ="5dp" />
</LinearLayout>